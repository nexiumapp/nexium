{
    "compilerOptions": {
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": false,
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "h",
        "allowJs": false,
        "baseUrl": "./src",
        "paths": {
            "/*": ["../*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
